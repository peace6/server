<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	
	
	<!--  maria DB 연동코드 현재 포트 5506으로 설정되어있습니다. -->
	<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
	<property name="driverClass" value="com.mysql.jdbc.Driver"/>
	<property name="jdbcUrl" value="jdbc:mysql://localhost:5506/spring4fs?characterEncoding=utf8"/>
	<property name="user" value="spring4"/>
	<property name="password" value="spring4"/>
	</bean> 


<!-- MySQL으로 연동코드 현재포트 기본값인 3306으로 설정되어있습니다. -->
<!-- 	<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
	<property name="driverClass" value="com.mysql.jdbc.Driver"/>
	<property name="jdbcUrl" value="jdbc:mysql://localhost/spring4fs?characterEncoding=utf8"/>
	<property name="user" value="spring4"/>
	<property name="password" value="spring4"/>
	</bean> -->
	
	<!-- JDBC -->
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>
</beans>
